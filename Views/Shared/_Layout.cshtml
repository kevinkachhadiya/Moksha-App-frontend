    <style>
        /* Sidebar styling */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            background-color: #f8f9fa;
            transition: all 0.3s;
        }

        .sidebar-sticky {
            height: 100vh;
            padding-top: 1rem;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .sidebar .nav-link {
            color: #333;
            border-radius: 0;
            padding: 0.75rem 1.25rem;
            font-weight: 500;
            transition: all 0.2s;
        }

            .sidebar .nav-link:hover {
                background-color: #e9ecef;
                color: #0d6efd;
            }

            .sidebar .nav-link.active {
                background-color: #e9ecef;
                color: #0d6efd;
                border-left: 4px solid #0d6efd;
            }

            .sidebar .nav-link i {
                margin-right: 0.5rem;
                font-size: 1.1rem;
                width: 1.5rem;
                text-align: center;
            }

        .sidebar-header {
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
        }

        .sidebar-footer {
            padding: 1rem;
            border-top: 1px solid #dee2e6;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        /* Main content area */
        .main-content {
            margin-left: 250px;
            padding: 10px;
            transition: all 0.3s;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .sidebar

        {
            margin-left: -250px;
        }

        .sidebar.active {
            margin-left: 0;
        }

        .main-content {
            margin-left: 0;
            width: 100%;
        }

        }
    </style>

</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Standard Desktop Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="sidebar-sticky d-flex flex-column">
                    <!-- Logo and Brand 
                    <div class="sidebar-header d-flex align-items-center">
                        <img src="/logo.png" alt="Moksha Plastic Logo" class="img-fluid me-2" style="max-height: 35px;">
                        <h5 class="mb-0 fw-bold">Moksha Plastic</h5>
                    </div> -->

                    <!-- Navigation Menu -->
                    <ul class="nav flex-column mt-4">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Dash_Board", "DashBoard")">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("All_Materials", "Materials")">
                                <i class="bi bi-box-seam"></i> Materials
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("All_bills", "BuyerBilling")">
                                <i class="bi bi-receipt"></i> Buying Billing
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-people"></i> Suppliers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-shop"></i> Inventory
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-graph-up"></i> Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                        </li>
                    </ul>

                    <!-- Footer Menu with User Profile -->
                    <div class="sidebar-footer mt-auto">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/api/placeholder/32/32" alt="User" width="32" height="32" class="rounded-circle me-2">
                                <span class="fw-semibold">Admin User</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear-fill me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i>Sign out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <!-- Page Content Placeholder -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

