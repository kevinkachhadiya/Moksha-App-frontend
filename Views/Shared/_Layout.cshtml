    <script>
            document.addEventListener('DOMContentLoaded', function() {
            // Function to set active navigation link
            function setActiveNavLink() {
                // Get current URL parts
                let currentUrl = window.location.pathname;
                let urlParts = currentUrl.split('/');

                // Extract controller and action from URL
                // ASP.NET MVC typical URL format: /{controller}/{action}/{id?}
                let controller = urlParts.length > 1 ? urlParts[1] : '';
                let action = urlParts.length > 2 ? urlParts[2] : '';

                // If URL is empty or just '/', activate Dashboard
                if (currentUrl === '/' || currentUrl === '') {
                    controller = 'DashBoard';
                    action = 'Dash_Board';
                }

                // Remove 'active' class from all nav links
                document.querySelectorAll('.sidebar .nav-link').forEach(link => {
                    link.classList.remove('active');
                });

                // Find matching link and add 'active' class
                // First try to match both controller and action
                let navLinks = document.querySelectorAll('.sidebar .nav-link');
                let exactMatch = false;

                navLinks.forEach(link => {
                    let linkController = link.getAttribute('data-controller');
                    let linkAction = link.getAttribute('data-action');

                    // Case-insensitive comparison
                    if (linkController && linkAction &&
                        linkController.toLowerCase() === controller.toLowerCase() &&
                        linkAction.toLowerCase() === action.toLowerCase()) {
                        link.classList.add('active');
                        exactMatch = true;
                    }
                });

                // If no exact match found, try matching just the controller
                if (!exactMatch) {
                    navLinks.forEach(link => {
                        let linkController = link.getAttribute('data-controller');

                        if (linkController && linkController.toLowerCase() === controller.toLowerCase()) {
                            link.classList.add('active');
                        }
                    });
                }
            }

            // Call the function when page loads
            setActiveNavLink();

            // Optional: Call it again when clicking on navigation links
            document.querySelectorAll('.sidebar .nav-link').forEach(link => {
                link.addEventListener('click', function() {
                    document.querySelectorAll('.sidebar .nav-link').forEach(l => {
                        l.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });
        });
        document.addEventListener("DOMContentLoaded", function () {

            document.querySelectorAll('.offcanvas .nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    const offcanvasElement = document.querySelector('.offcanvas');
                    if (offcanvasElement) {
                        const bsOffcanvas = bootstrap.Offcanvas.getInstance(offcanvasElement);
                        if (bsOffcanvas) {
                            bsOffcanvas.hide(); // Close the sidebar
                        }
                    }
                });
            });
        });

               

    </script>


   
    <!-- JavaScript for toggling functionality -->
    <script>
                      document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const mobileSidebarToggle = document.getElementById('mobileSidebarToggle');
            const navTexts = document.querySelectorAll('.nav-text');

            // Function to toggle desktop sidebar (collapse/expand)
            function toggleDesktopSidebar() {
                sidebar.classList.toggle('collapsed');

                if (sidebar.classList.contains('collapsed')) {
                    sidebar.classList.remove('col-md-3', 'col-lg-2');
                    sidebar.classList.add('col-md-1');
                    sidebarToggle.innerHTML = '<i class="bi bi-arrow-right-circle"></i>';

                    // Hide text in nav items
                    navTexts.forEach(text => text.style.display = 'none');

                    // Adjust main content
                    mainContent.classList.remove('col-md-9', 'col-lg-10');
                    mainContent.classList.add('col-md-11');
                } else {
                    sidebar.classList.remove('col-md-1');
                    sidebar.classList.add('col-md-3', 'col-lg-2');
                    sidebarToggle.innerHTML = '<i class="bi bi-arrow-left-circle"></i>';

                    // Show text in nav items
                    navTexts.forEach(text => text.style.display = 'inline');

                    // Adjust main content
                    mainContent.classList.remove('col-md-11');
                    mainContent.classList.add('col-md-9', 'col-lg-10');
                }
            }

            // Function to toggle mobile sidebar (show/hide)
            function toggleMobileSidebar() {
                sidebar.classList.toggle('mobile-show');
                document.body.classList.toggle('sidebar-open');

                // Change the icon based on sidebar state
                if (sidebar.classList.contains('mobile-show')) {
                    mobileSidebarToggle.innerHTML = '<i class="bi bi-x-lg"></i>';
                } else {
                    mobileSidebarToggle.innerHTML = '<i class="bi bi-list"></i>';
                }
            }

            // Desktop sidebar toggle
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                if (window.innerWidth >= 768) {
                    toggleDesktopSidebar();
                } else {
                    toggleMobileSidebar();
                }
            });

            // Mobile sidebar toggle
            mobileSidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                toggleMobileSidebar();
            });

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth < 768 &&
                    sidebar.classList.contains('mobile-show') &&
                    !sidebar.contains(e.target) &&
                    e.target !== mobileSidebarToggle &&
                    !mobileSidebarToggle.contains(e.target)) {
                    toggleMobileSidebar();
                }
            });

            // Handle resize events for responsiveness
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 768) {
                    sidebar.classList.remove('mobile-show');
                    document.body.classList.remove('sidebar-open');
                    mobileSidebarToggle.innerHTML = '<i class="bi bi-list"></i>';
                }
            });
        });
    </script>

