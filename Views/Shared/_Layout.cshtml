<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moksha_App</title>

    <!-- Bootstrap CSS (Load Only Once) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Tailwind CSS (If Needed) -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.0.24/dist/tailwind.min.css" rel="stylesheet" />

    <!-- Site-Specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- jQuery and Validation Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/additional-methods.min.js"></script>

    <!-- Bootstrap JS (Load Only Once) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <!--  -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Company Logo -->
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/logo.png" alt="Moksha Plastic Logo" class="img-fluid" style="max-height: 50px; margin-right: 10px;">
                    <span class="fw-bold text-dark fs-4">Moksha Plastic</span>
                </a>
                <!-- Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Collapsible Navigation -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav">
                        <!-- Dashboard Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold px-3 py-2 hover-bg-primary rounded"
                               asp-area="" asp-controller="DashBoard" asp-action="Dash_Board">
                                <i class="bi bi-speedometer2 me-2"></i>Dashboard
                            </a>
                        </li>
                        <!-- Materials Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold px-3 py-2 hover-bg-primary rounded"
                               asp-area="" asp-controller="Materials" asp-action="All_Materials">
                                <i class="bi bi-box-seam me-2"></i>Materials
                            </a>
                        </li>
                        <!-- Buying billing Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold px-3 py-2 hover-bg-primary rounded"
                               asp-area="" asp-controller="BuyerBilling" asp-action="All_bills">
                                <i class="bi bi-receipt me-2"></i>Buying Billing
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Sidebar for mobile -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
        <div class="offcanvas-header">
            <!-- Logo inside the sidebar -->
            <h5 class="offcanvas-title" id="sidebarMenuLabel">
                <img src="~/logo.png" alt="Moksha Plastic Logo" class="img-fluid" style="max-height: 40px; margin-right: 10px;">
                <span class="fw-bold">Moksha Plastic</span>
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold px-3 py-2 hover-bg-primary rounded"
                       asp-area="" asp-controller="DashBoard" asp-action="Dash_Board">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </a>
                </li>
                <!-- Materials Link -->
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold px-3 py-2 hover-bg-primary rounded"
                       asp-area="" asp-controller="Materials" asp-action="All_Materials">
                        <i class="bi bi-box-seam me-2"></i>Materials
                    </a>
                </li>
                <!-- Buying billing Link -->
            
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold px-3 py-2 hover-bg-primary rounded"
                       asp-area="" asp-controller="BuyerBilling" asp-action="All_bills">
                        <i class="bi bi-receipt me-2"></i>Buying Billing
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer bg-light text-muted py-4">
        <div class="container">
            <div class="row align-items-center">
                <!-- Brand and Copyright -->
                <div class="col-12 col-md-4 text-center text-md-start mb-3 mb-md-0">
                    &copy; @DateTime.Now.Year - <strong>Moksha Plastic</strong>
                </div>

                <!-- Navigation Links -->
                <div class="col-12 col-md-4 text-center mb-3 mb-md-0">
                    <a href="@Url.Action("About", "Home")" class="text-decoration-none text-muted me-3">About Us</a>
                    <a href="@Url.Action("Privacy", "Home")" class="text-decoration-none text-muted me-3">Privacy</a>
                   <a href="@Url.Action("Contact", "Home")" class="text-decoration-none text-muted">Contact</a>
                </div>

                <!-- Social Media Links -->
                <div class="col-12 col-md-4 text-center text-md-end">
                    <a href="https://facebook.com" target="_blank" class="text-decoration-none text-muted me-3">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="https://twitter.com" target="_blank" class="text-decoration-none text-muted me-3">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="https://instagram.com" target="_blank" class="text-decoration-none text-muted">
                        <i class="bi bi-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
  <style>
    /* Ensure the footer is sticky and responsive */
    /* General Styles */
html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
    font-family: Arial, sans-serif;
}

.footer {
    margin-top: auto;
    width: 100%;
    background-color: #f8f9fa;
    padding: 1.5rem 1rem;
    box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}

.footer a {
    font-size: 0.9rem;
    transition: color 0.3s ease;
}

.footer a:hover {
    color: #007bff;
}

/* Navbar Styles */
.navbar {
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1rem;
    z-index: 100;
    position: relative;
    backdrop-filter: blur(5px); /* Subtle blur effect */
}

.navbar-brand img {
    max-height: 40px; /* Scales logo appropriately */
}

.navbar-nav .nav-item .nav-link {
    font-weight: 500;
    margin-right: 1.5rem;
    color: #333;
    transition: color 0.3s ease;
}

.navbar-nav .nav-item .nav-link:hover {
    color: #007bff;
}

.navbar-nav .nav-item .nav-link.active {
    color: #0056b3;
    font-weight: 600;
}

/* Offcanvas Sidebar Styles */
.offcanvas-body {
    background-color: #f8f9fa;
    padding: 2rem;
}

.offcanvas-header {
    background-color: #f8f9fa;
    color: black;
    padding: 1rem;
}

.offcanvas-title {
    font-size: 1.2rem;
    display: flex;
    align-items: center;
}

.offcanvas-body .navbar-nav .nav-item {
    padding: 0.5rem 0;
}

.offcanvas-body .navbar-nav .nav-item .nav-link {
    font-weight: 500;
    color: #333;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.offcanvas-body .navbar-nav .nav-item .nav-link:hover {
    background-color: #007bff;
    color: #fff;
}

.offcanvas-body .navbar-nav .nav-item .nav-link.active {
    font-weight: bold;
    background-color: #fff;
    color: #007bff;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .footer {
        text-align: center;
        padding: 2rem 1rem;
    }

    .footer .row {
        flex-direction: column;
    }

    .footer .col-12 {
        margin-bottom: 1rem;
    }

    .navbar-nav {
        flex-direction: column;
        align-items: flex-start;
    }

    .navbar-nav .nav-item {
        width: 100%;
        margin-bottom: 1rem;
    }
}

@@media (min-width: 769px) {
    .footer .col-12 {
        margin-bottom: 0;
    }
}
        /* Offcanvas Styling */
        .offcanvas {
            width: 300px;
            transition: transform 0.4s ease-in-out; /* Smooth transition for opening/closing */
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        }

        .offcanvas-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
            padding: 1rem;
        }

        .offcanvas-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .offcanvas-body {
            background-color: #fff;
            padding: 1.5rem;
        }

            .offcanvas-body .nav-link {
                padding: 0.8rem 1rem;
                border-radius: 5px;
                transition: all 0.3s ease-in-out;
                color: #333;
                text-decoration: none;
                font-size: 1rem;
                font-weight: 500;
            }

                .offcanvas-body .nav-link:hover {
                    background-color: #007bff;
                    color: #fff;
                }

</style>
   
    @await Html.PartialAsync("_LoginPartial")

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/additional-methods.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.offcanvas .nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    const offcanvasElement = document.querySelector('.offcanvas');
                    if (offcanvasElement) {
                        const bsOffcanvas = bootstrap.Offcanvas.getInstance(offcanvasElement);
                        if (bsOffcanvas) {
                            bsOffcanvas.hide(); // Close the sidebar
                        }
                    }
                });
            });
        });
    </script>

</body>
</html>
