               });
            
            }); 
               

    </script>

    <!-- JavaScript for toggling functionality -->
    <script>

                document.addEventListener('DOMContentLoaded', function() {
          const sidebar = document.getElementById('sidebar');
          const mainContent = document.querySelector('.main-content');
          const sidebarToggle = document.getElementById('sidebarToggle');
          const mobileSidebarToggle = document.getElementById('mobileSidebarToggle');
          const navTexts = document.querySelectorAll('.nav-text');

          // Check localStorage for saved state
          const savedState = localStorage.getItem('sidebarCollapsed');
          if (savedState === 'true' && window.innerWidth >= 768) {
            collapseSidebar();
          }

          // Function to collapse sidebar
          function collapseSidebar() {
            sidebar.classList.add('collapsed');
            sidebar.classList.replace('col-md-3', 'col-md-1');
            sidebar.classList.remove('col-lg-2');
            sidebarToggle.innerHTML = '<i class="bi bi-arrow-right-circle"></i>';
            navTexts.forEach(text => text.style.display = 'none');

            mainContent.classList.replace('col-md-9', 'col-md-11');
            mainContent.classList.replace('col-lg-10', 'col-lg-11');

            localStorage.setItem('sidebarCollapsed', 'true');
          }

          // Function to expand sidebar
          function expandSidebar() {
            sidebar.classList.remove('collapsed');
            sidebar.classList.replace('col-md-1', 'col-md-3');
            sidebar.classList.add('col-lg-2');
            sidebarToggle.innerHTML = '<i class="bi bi-arrow-left-circle"></i>';
            navTexts.forEach(text => text.style.display = 'inline');

            mainContent.classList.replace('col-md-11', 'col-md-9');
            mainContent.classList.replace('col-lg-11', 'col-lg-10');

            localStorage.setItem('sidebarCollapsed', 'false');
          }

          // Function to toggle desktop sidebar
          function toggleDesktopSidebar() {
            if (sidebar.classList.contains('collapsed')) {
              expandSidebar();
            } else {
              collapseSidebar();
            }
          }

            function toggleMobileSidebar() {
          sidebar.classList.toggle('mobile-show');
          document.body.classList.toggle('sidebar-open');
          mobileSidebarToggle.innerHTML = sidebar.classList.contains('mobile-show')
            ? '<i class="bi bi-x-lg"></i>'
            : '<i class="bi bi-list"></i>';
        }

        // Also update the close-on-outside-click logic:
            document.addEventListener('click', function(e) {
          if (
            window.innerWidth < 768 &&
            !sidebar.contains(e.target) &&
            e.target !== mobileSidebarToggle
          ) {
            sidebar.classList.remove('mobile-show');
            document.body.classList.remove('sidebar-open');
            mobileSidebarToggle.innerHTML = '<i class="bi bi-list"></i>';
          }
        });

          // Event listeners
          sidebarToggle.addEventListener('click', function(e) {
            e.preventDefault();
            if (window.innerWidth >= 768) {
              toggleDesktopSidebar();
            } else {
              toggleMobileSidebar();
            }
          });

          mobileSidebarToggle.addEventListener('click', toggleMobileSidebar);

          // Close mobile sidebar when clicking outside
          document.addEventListener('click', function(e) {
            if (window.innerWidth < 768 &&
                !sidebar.contains(e.target) &&
                e.target !== mobileSidebarToggle) {
              sidebar.classList.remove('show');
              document.body.classList.remove('sidebar-open');
              mobileSidebarToggle.innerHTML = '<i class="bi bi-list"></i>';
            }
          });

          // Handle window resize
          window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
              sidebar.classList.remove('show');
              document.body.classList.remove('sidebar-open');
              mobileSidebarToggle.innerHTML = '<i class="bi bi-list"></i>';

              // Restore desktop state
              if (localStorage.getItem('sidebarCollapsed') === 'true') {
                collapseSidebar();
              } else {
                expandSidebar();
              }
            }
          });
        });
    </script>
