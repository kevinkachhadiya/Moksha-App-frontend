<form id="editPartyForm" class="needs-validation" novalidate>
    <!-- Hidden field to hold the Party ID -->
    <input type="hidden" id="Edit_PartyID" value="">

    <div class="mb-3">
        <label for="Edit_P_Name" class="form-label">Party Name</label>
        <input type="text" class="form-control" id="Edit_P_Name" required maxlength="100" value="">
        <div class="invalid-feedback">Please enter a party name (max 100 chars)</div>
    </div>

    <div class="mb-3">
        <label for="Edit_P_number" class="form-label">Phone Number</label>
        <input type="tel"
               class="form-control"
               id="Edit_P_number"
               pattern="[0-9]{10}"
               maxlength="10"
               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10)"
               value="">
        <div class="invalid-feedback">Please enter exactly 10 digits (numbers only)</div>
    </div>

    <div class="mb-3">
        <label for="Edit_p_t" class="form-label">Party Type</label>
        <select class="form-select" id="Edit_p_t" required>
            <option value="">-- Select Type --</option>
            <option value="0">Supplier</option>
            <option value="1">Customer</option>
        </select>
        <div class="invalid-feedback">Please select a party type</div>
    </div>

    <div class="mb-3">
        <label for="Edit_P_Address" class="form-label">Address</label>
        <input type="text"
               class="form-control"
               id="Edit_P_Address"
               maxlength="200"
               placeholder="Enter full address (street, city, etc.)"
               value="">
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="Edit_IsActive">
        <label class="form-check-label" for="Edit_IsActive">Active Status</label>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>
