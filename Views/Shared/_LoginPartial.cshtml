<div class="modal fade" id="uniqueLoginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Login</h5>
            </div>
            <div class="modal-body">
                <form id="loginForm" method="post" action="@Url.Action("Login", "Auth")">
                    <div class="mb-3">
                        <label for="usernameLogin" class="form-label">Username</label>
                        <input type="text" class="form-control" id="usernameLogin" name="username" required />
                    </div>
                    <div class="mb-3">
                        <label for="passwordLogin" class="form-label">Password</label>
                        <input type="password" class="form-control" id="passwordLogin" name="password" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Fix modal backdrop issue */
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5) !important; /* Slightly darken */
        z-index: 1040;
    }

    /* White background for the modal content */
    .modal-content {
        background-color: #ffffff !important;
        color: black;
    }
</style>
