@model Moksha_App.Models.Stock

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (TempData["message"] != null && (bool)TempData["message"]==true)
    {
        <script>
            document.body.appendChild(globalAlertContainer);
            showAlert("✅ Login successful! Welcome, admin.<br>", "success");
        </script>
    }
}

<h1>Index</h1>

<div>
    <h4>Stock</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
