@model Moksha_App.Models.StockModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (TempData["message"] != null && (bool)TempData["message"]==true)
      {
        <script src="~/js/site.js">  </script>
        <script>
      
             showAlert("✅ Login successful! Welcome, admin .<br>","success",2000);
        </script>
       }
}


<div>
    <h4>Stock Summary</h4>
    <hr />
    <div class="row">
        <!-- Current Stock Stats (Original DL List) -->
        <div class="col-md-6">
            <dl class="row">
                <!-- Your existing stock fields (TotalBags, Weight, etc.) -->
                <!-- ... -->
            </dl>
        </div>
        <!-- Buying Analytics Charts -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Monthly Buying Trends</h5>
                </div>
                <div class="card-body">
                    <canvas id="buyingChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Sortable Buying History Table -->
    <div class="mt-4">
        <h5>Buying History</h5>
        <table id="buyingTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Material</th>
                    <th>Weight (kg)</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BuyingHistory)
                {
                    <tr>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Material.ColorName</td>
                        <td>@item.Weight</td>
                        <td>@item.Cost.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Required Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    <script>
        // 1. Chart.js: Monthly Buying Trends
        const ctx = document.getElementById('buyingChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Json.Serialize(Model.MonthlyTrends.Select(m => m.Month).ToList()),
                datasets: [{
                    label: 'Weight (kg)',
                    data: @Json.Serialize(Model.MonthlyTrends.Select(m => m.TotalWeight).ToList()),
                    backgroundColor: '#36a2eb'
                }, {
                    label: 'Total Cost',
                    data: @Json.Serialize(Model.MonthlyTrends.Select(m => m.TotalCost).ToList()),
                    backgroundColor: '#4bc0c0',
                    type: 'line',
                    borderColor: '#4bc0c0',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // 2. DataTables: Sortable Buying History
        $(document).ready(function () {
            $('#buyingTable').DataTable({
                ordering: true, // Enable sorting
                order: [[0, 'desc']] // Default sort by Date (newest first)
            });
        });
    </script>
}
